<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/teddy" />

        <RelativeLayout
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image">
            <ImageView
                android:id="@+id/ic_directions_car_black_18dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_directions_car_black_18dp"/>
            <TextView
                android:text="ALOHA"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_directions_car_black_18dp"
                android:background="#99000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/image"
            android:layout_below="@id/car">
            <ImageView
                android:id="@+id/ic_directions_walk_black_18dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_directions_walk_black_18dp"/>
            <TextView
                android:text="ALOHA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_directions_walk_black_18dp"
                android:background="#99000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/walk"
            android:layout_marginTop="13dp">
            <ImageView
                android:id="@+id/ic_directions_bike_black_18dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_directions_bike_black_18dp"/>
            <TextView
                android:text="ALOHA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_directions_bike_black_18dp"
                android:background="#99000000" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_marginTop="13dp"
            android:layout_below="@id/bike">
            <ImageView
                android:id="@+id/ic_directions_transit_black_18dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_directions_transit_black_18dp"/>
            <TextView
                android:text="ALOHA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_directions_transit_black_18dp"
                android:background="#99000000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:elevation="125dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/image"
            android:text="TITLE"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>